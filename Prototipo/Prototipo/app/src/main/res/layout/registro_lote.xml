<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FECBFE"
    android:id="@+id/registroLote"
    tools:context=".view.FechaCaducidad">

    <LinearLayout
        android:id="@+id/LinearLayout01"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/thin_background_app"
        android:gravity="right|top"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LayoutP6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="64dp"
        android:background="#FFFFFF"
        android:gravity="center|top"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/comidifta" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:gravity="center|top"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:shadowColor="#282828"
                android:shadowDx="5"
                android:shadowDy="5"
                android:shadowRadius="20"
                android:text="Registrar Lote"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etProductoN"
                android:layout_width="270dp"
                android:layout_height="30dp"
                android:background="#D7D7D7"
                android:backgroundTintMode="add"
                android:ems="10"
                android:foregroundTint="#FAFAFA"
                android:inputType="text"
                android:textColorHint="#000000"
                android:hint="  Producto"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/spCategoría"
                android:layout_width="270dp"
                android:layout_height="30dp"
                android:background="#D8D8D8"
                android:backgroundTintMode="add"
                android:entries="@array/categorias"
                android:foregroundTint="#FFFFFF"
                android:foregroundTintMode="add"
                android:textColorHint="#000000"
                android:hint="  Categoría"
                android:hapticFeedbackEnabled="false" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etCantidad"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="5dp"
                android:background="#D7D7D7"
                android:backgroundTintMode="add"
                android:ems="10"
                android:foregroundTint="#FAFAFA"
                android:inputType="text"
                android:textColorHint="#000000"
                android:hint="  Cantidad"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/spUnidad"
                android:layout_width="110dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="5dp"
                android:background="#D8D8D8"
                android:backgroundTintMode="add"
                android:entries="@array/unidad"
                android:foregroundTint="#FFFFFF"
                android:foregroundTintMode="add"
                android:text="  Unidad"
                android:hapticFeedbackEnabled="false" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etEspecificaciones"
                android:layout_width="270dp"
                android:layout_height="30dp"
                android:background="#D7D7D7"
                android:backgroundTintMode="add"
                android:ems="10"
                android:foregroundTint="#FAFAFA"
                android:inputType="text"
                android:textColorHint="#000000"
                android:hint="  Especificaciones"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="Fecha Caducidad"
                android:textColor="#000000"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btnFechaCaducidad"
                style="?android:spinnerStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFFFFF"
                android:backgroundTintMode="add"
                android:drawableTint="#FFFFFF"
                android:text="ENE 01 2023"
                android:textColor="@color/black"
                android:textSize="15sp"
                app:iconTint="#D6D6D6"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:strokeColor="#FFFFFF" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="bottom|center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnRegistrarLote"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#55BDC1"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="5"
                android:text="Registrar"
                android:textColor="#F3B082"
                android:textSize="18sp"
                android:textStyle="bold"
                app:cornerRadius="10dp"
                app:strokeColor="#3C9D7F"
                app:strokeWidth="4dp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LayoutCanc"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="650dp"
        android:gravity="end|top"
        android:orientation="horizontal"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <ImageButton
            android:id="@+id/btnCancel"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@android:drawable/btn_dialog" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>